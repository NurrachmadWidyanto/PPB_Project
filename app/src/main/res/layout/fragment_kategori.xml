<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/bg_nav">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/knight_brush_demo"
        android:paddingHorizontal="15dp"
        android:text="Kategori"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardkategori"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/bg">

                        <TextView
                            android:id="@+id/cardkategorit1"
                            android:text="Semua"
                            android:layout_gravity="center"
                            android:textColor="#444444"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="15dp"
                            android:layout_below="@+id/songkem"
                            android:fontFamily="@font/knight_brush_demo"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardkategori2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/bg">

                    <TextView
                        android:id="@+id/cardkategorit2"
                        android:text="Wisata Alam"
                        android:layout_gravity="center"
                        android:textColor="#444444"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_below="@+id/songkem"
                        android:fontFamily="@font/knight_brush_demo"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardkategori3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/bg">

                    <TextView
                        android:id="@+id/cardkategorit3"
                        android:text="Wisata Kuliner"
                        android:layout_gravity="center"
                        android:textColor="#444444"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_below="@+id/songkem"
                        android:fontFamily="@font/knight_brush_demo"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:paddingHorizontal="15dp"
                android:text="Wisata Kuliner"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:paddingHorizontal="15dp"
                android:text="(1) destinasi"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </RelativeLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardaction"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_columnWeight="1"
        android:layout_marginBottom="16dp"
        android:layout_rowWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/terasi" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="Bebek Songkem Pak Salim"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingLeft="15dp"
                    android:drawableLeft="@drawable/lokasi"
                    android:text="0.96 Km"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>