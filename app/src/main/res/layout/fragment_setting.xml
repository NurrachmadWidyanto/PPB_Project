<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_nav"
    android:paddingHorizontal="10dp"
    android:paddingVertical="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/knight_brush_demo"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="Pengaturan"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardkategori"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/cardkategorit1"
                        android:text="Tentang Kami"
                        android:layout_gravity="center"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/akun"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_below="@+id/songkem"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:paddingHorizontal="15dp"
                        android:src="@drawable/panah"/>

                </RelativeLayout>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardkategori2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/cardkategorit2"
                        android:text="Kontak"
                        android:layout_gravity="center"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/send"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_below="@+id/songkem"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:paddingHorizontal="15dp"
                        android:src="@drawable/panah"/>

                </RelativeLayout>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardkategori3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/bg">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/cardkategorit3"
                        android:text="Versi Aplikasi"
                        android:layout_gravity="center"
                        android:textColor="#444444"
                        android:textSize="16sp"
                        android:drawableLeft="@drawable/star"
                        android:drawablePadding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="15dp"
                        android:layout_below="@+id/songkem"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:paddingHorizontal="15dp"
                        android:text="1.0.0"/>

                </RelativeLayout>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>